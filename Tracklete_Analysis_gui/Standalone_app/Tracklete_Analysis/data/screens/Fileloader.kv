#################
## FILELOADER ##
#################

AnalysisScreen:
	name: 'Fileloader'

	BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: app._homepath()
            filters: ['*.xls*']

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: filechooser.cancel(); app.go_screen_return()

            Button:
                text: "Load"
                on_release: app.load_file(filechooser.path, filechooser.selection)